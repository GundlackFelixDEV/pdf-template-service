{% block receits %}
    <div>
        <h5>Purchase Overview</h5>
    </div>
    {% for item in Receits %}
    <div class="page-break-auto p-0">
        <div class="card m-2 p-0">
            <div class="card-header">
                <div class="row">
                    <div class="col-3 text-center">
                        <div class="logo-vendor m-auto">
                            <img src="static/images/logo_placeholder.jpg" />
                        </div>
                        <b>{{item.vendor.name}}</b>
                    </div>
                    <div class="col-6">
                        <div>{{item.vendor.ocr_MerchantStreet}}</div>
                        <div>{{item.vendor.ocr_MerchantPostcode}}&nbsp;{{item.vendor.ocr_MerchantCity}}</div>
                        <div>VAT-ID:&nbsp;{{item.vendor.ocr_VatNumber}}</div>
                        <div>Steuer Nr.:&nbsp;{{item.vendor.ocr_TaxNumber}}</div>
                    </div>
                    <div class="col-3">
                        <div class="d-flex flex-column">
                            <div class="d-flex text-nowrap text-right">{{item.ocr_Date}}</div>
                            <div class="d-flex mt-auto flex-row">
                                <div class="d-flex">Supplier&nbsp;Invoice:&nbsp;{{item.invoiceNr}}</div>
                                <div class="d-flex">Remonon&nbsp;ID:&nbsp;{{item.romononID}}</div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="card-body pt-0 pb-0"> 
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>Qty</th>
                            <th>Description</th>
                            <th>You Paid</th>
                            <th>Remonon Price</th>
                            <th>Your Refund</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for line_item in item.line_items %}
                            <tr>
                                <td>{{line_item.ocr_Quantity}}</td>
                                <td>{{line_item.ocr_ProductName}}</td>
                                <td>{{line_item.ocr_GrossLineTotal}}&nbsp;EUR</td>
                                <td>{{line_item.remonon_GrossLineTotal}}&nbsp;EUR</td>
                                <td>{{line_item.refund}}&nbsp;EUR</td>
                            </tr>
                        {% endfor %}
                    </tbdoy>
                    <tfoot>
                        <tr>
                            <td><b>Total:</b></td>
                            <td></td>
                            <td>{{item.TotalAmount}}</td>
                            <td>{{item.TotalRemonon}}</td>
                            <td>{{item.TotalRefund}}</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    {% endfor %}
{% include "receit_listing_style.html" %}
{% endblock %}